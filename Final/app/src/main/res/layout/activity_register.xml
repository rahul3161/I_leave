<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d5e2f9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.afinal.Register">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:id="@+id/empname"
            android:inputType="textLongMessage"
            android:hint="First Name"
            android:layout_marginTop="10sp"
            android:textSize="30sp"
            android:background="#c4bebe"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:id="@+id/empnam"
            android:inputType="textLongMessage"
            android:hint="Last Name"
            android:layout_marginTop="10sp"
            android:textSize="30sp"
            android:background="#c4bebe"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/empid"
        android:inputType="number"
        android:hint="Enter Employee Id"
        android:layout_marginTop="10sp"
        android:textSize="30sp"
        android:background="#c4bebe"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/designation"
        android:inputType="text"
        android:hint="Designation"
        android:layout_marginTop="10sp"
        android:textSize="30sp"
        android:background="#c4bebe"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/passwordid"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="10sp"
        android:textSize="30sp"
        android:background="#c4bebe"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/mobileno"
        android:inputType="number"
        android:hint="Enter Mobile Number"
        android:layout_marginTop="10sp"
        android:textSize="30sp"
        android:maxLength="10"
        android:background="#c4bebe"/>
    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:textAllCaps="false"
        android:shape="oval"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:background="#f93403"/>
    <TextView android:id="@+id/linkSignup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Click here to Sign in"
        android:gravity="center"
        android:textSize="16sp"
        android:onClick="login"/>
</LinearLayout>
